                                <p id="service1Price">$0</p>
                                <p id="service1Desc">Looking for a quick tidy?</p>
                                <button><a href="#">Click Here to Learn More!</a></button>
                            </div>
                            <div class="pricing-item popular">
                                <h4 id="service2Name">Most Popular</h4>
                                <p id="service2Price">Detailed</p>
                                <p id="service2Desc">$38/mo</p>
                                <button><a href="#">Click Here to Learn More!</a></button>
                            </div>
                            <div class="pricing-item">
                                <h4 id="service3Name">Full Service</h4>
                                <p id="service3Price">$70/mo</p>
                                <p id="service3Desc">After Party/Event</p>
